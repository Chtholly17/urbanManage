.container{
  margin:5rpx
}
view{
  margin-bottom: 30rpx
}
input{
  width: 600rpx;
  margin-top: 10rpx;
  border-bottom: 2rpx solid #ccc
}
label{
  display: block;
  margin:8rpx
}
textarea{
  width: 600rpx;
  height: 50rpx;
  margin-top: 10rpx;
  border: 2rpx solid #eee
}

.list-wrapper {
  width: 100%;
}

/* 横着的分割View样式 */
/*分割线样式*/
.div-line{
  background: #E0E3DA;
  width: 100%;
  height: 3rpx;
}

.list-item {
  width: 100%;
  height: 120rpx;
}

.list-item_active {
  background-color: #E0E3DA;
}

.item {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 120rpx;
}
.item-text {
  position: fixed;
  left: 100rpx;
  font-size: 38rpx;
}
.item-array {
  position: fixed;
  right: 50rpx;
  font-size: 38rpx;
}

.item-image {
  position: fixed;
  left: 50rpx;
  width: 40rpx;
  height: 40rpx;
}