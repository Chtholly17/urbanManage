

/* pages/add_space/add_space.wxss */ 
 
.wrap {  
    
  width: 100%; 
  padding: 0 30rpx; 
  box-sizing: border-box; 
} 
.img-wrap {  
    
  font-size: 30rpx; 
  color: #33373E; 
  margin-bottom: 10rpx; 
} 
.txt {  
    
  margin-bottom: 20rpx; 
} 
.imglist {  
    
  display: flex; 
  flex-wrap: wrap; 
} 
.item {  
    
  width: 150rpx; 
  height: 150rpx; 
  margin-right: 22rpx; 
  margin-bottom: 10rpx; 
  position: relative; 
} 
.last-item {  
    
  width: 150rpx; 
  height: 150rpx; 
  text-align: center; 
  line-height: 146rpx; 
  border: 2rpx dashed #8B97A9; 
  box-sizing: border-box; 
} 
.item image {  
    
  width: 100%; 
  height: 100%; 
} 
.delete {  
    
  width: 30rpx; 
  height: 30rpx; 
  position: absolute; 
  top: -14rpx; 
  right: -12rpx; 
} 
 
.reset { 
  color: white; 
  background: #353535; 
} 
 
.save { 
  color: black; 
  background: white 
} 
 
.footer { 
  width: 100%; 
  height: 12vh; 
  position: fixed; 
  bottom: 0; 
  display: flex; 
  margin-top: 0%;
  border-top: lightgray solid 1px; 
} 
 
.footer view { 
  width: 50%; 
  height: 100%; 
  padding-top: 2vh; 
  text-align: center; 
}

.bg-image {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -1;
}

.content {
  background-color: rgba(255, 255, 255);
  padding: 30rpx;
  border-radius: 40rpx;
  position: absolute;
  top: 80%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  max-width: 600rpx;
  text-align: center;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.3);
}

.con{
  width: 100%;
}

.my-image {
  width: 100%; /* 设置图片宽度为屏幕的90% */
  max-height: 60vh; /* 设置图片最大高度为屏幕高度的60% */
  display: block; /* 让图片以块级元素的形式显示 */
  margin: 0 auto; /* 让图片水平居中 */
}
