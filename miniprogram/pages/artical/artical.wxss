.container {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  width: 100%;
  
}


.bg-image {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -1;
}

.content {
  background-color: rgba(255, 255, 255);
  padding: 30rpx;
  border-radius: 40rpx;
  position: absolute;
  top: 80%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  max-width: 600rpx;
  text-align: center;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.3);
}


.app-name {
  font-size: 64rpx;
  font-family:fantasy;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: center;
  border-radius: 20rpx;
  background-color: rgba(255, 255, 255, 0.0);
  color: #298A08;
  padding: 10rpx 20rpx;
  display: inline-block;
  line-height: 1.2;
}


.button {
  width: 60rpx;
  height: 100rpx;
  margin-top: 20px;
  background-color: rgb(47, 124, 50);
  color: rgb(236, 248, 236);
  border-radius: 20px;
  padding: 10px 20px;
  font-size: 24px;
  font-weight: bold;
  border-radius: 40%;
  box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
}

.circular-button {
  background-color: blue;
  color: white;
  padding: 10px 20px;
  font-size: 16px;
}

