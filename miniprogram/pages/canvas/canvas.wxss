/* index.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #F5F5F5;
}

.btn{
  padding: 10rpx 20rpx;
  float:left;
  margin:10rpx;
  border:solid 1px #dfdfdf;
  border-radius: 10rpx;
}
.image-container {
  width: 100%; /* 容器宽度 */
  height: 500rpx; /* 容器高度 */
  background-position: center center; /* 图片位置居中 */
  background-size: cover; /* 图片填充并裁剪到容器 */
}
.image-container img{
  width: 10px; /* 容器宽度 */
  height: 10px; /* 容器高度 */
  object-fit: cover;
  transform: scale(2);
}
