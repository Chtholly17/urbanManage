.add {
  display: flex;
  /*设置显示样式**/
  align-items: center;
  /**子view垂直居中*/
  vertical-align: center;
  /**垂直居中*/
  justify-content: center;
  /**内容居中*/
  flex-direction: row;
}

/**图像**/
.image {
  width: 50rpx;
  height: 50rpx;
  border: 1px solid green;
}

.container {
  /* background: #f6f6f6; */
  padding: 20rpx;
