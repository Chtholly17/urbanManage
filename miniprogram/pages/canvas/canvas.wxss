/* index.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #F5F5F5;
}

.submit_btn{
  background: rgba(0, 0, 0, .05);
  border-radius: 10rpx;
  border: 2rpx solid #999999;
  color: #999999;
  font-size: 28rpx;
  position: absolute;
}

.flexbox_auto{
  display: flex;
  align-items: center;
  justify-content: center;
}

.rect{
  height: 100rpx;
  width: 120rpx;
}

.productNav{
  display: flex;
  flex-direction: row;
  font-family: "Microsoft YaHei"
}
.left{
  width: 25%;
  font-size: 30rpx;
  background-color: #f4f4f4;
}
.left view{
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
}
.selected{
  background-color: #fff;
  border-left: 2px solid #E54847;
  font-weight: bold;
  color: #E54847;
}
.normal{
  background-color: #f4f4f4;
  border-bottom: 1px solid #f2f2f2;
}
.right{
  width:75%;
  margin: 0;
}
swiper{
  height: 500px;
}


.btn{
  padding: 10rpx 20rpx;
  float:left;
  margin:10rpx;
  border:solid 1px #dfdfdf;
  border-radius: 10rpx;
}

.list {
  display: flex;
  flex-wrap: wrap;
}
.list .moveList {
  width: 100%;
}
.list .moveList .moveItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #ececec00;
}
.list .moveList .moveItem .icon {
  height: 60rpx;
  width: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 20rpx;
  background-color: aqua;
  border-radius: 50%;
}
.list .moveList .moveItem .showLine {
  position: absolute;
  left: 0;
  transform: translate(-50%);
  width: 10rpx;
  height: 100%;
  background-color: blue;
}

.footer {
  margin-left: -50%;
  width: 100%;
  height: var(--footer-height);
  position: fixed;
  bottom: 0;
  display: flex;
  border-top: #E0E0E0 solid 1px;
  background: white;
  z-index: 10;
}

.add {
  width: var(--button-size);
  height: var(--button-size);
  position: fixed;
  bottom: calc(var(--footer-height) - var(--button-size) / 2);
  left: calc(50% - var(--button-size) / 2);
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: calc(var(--button-size) / 2);
  background-color: var(--button-color);
  box-shadow: rgba(0, 0, 0, 0.3) 0 2px 10px;
}
.add-image {
  width: var(--button-icon-size);
  height: var(--button-icon-size);
}