/* demo1/index.wxss */
page {
  overflow-y: hidden;
}

.drawing-board, .drawing-board-image {
  width: 100%;
  height: 500rpx;
  background-color: white;
  z-index: 2;
  /* position: absolute; */
}
.drawing-board-image {
  margin-top: 10rpx;
  background-color: white;
  width: 100%;
  height: 200rpx;
}
.adjust-item {
  white-space: nowrap;
  display: flex;
  align-items: center;
}
.adjust-item slider {
  width: 65%;
  display: inline-block;
}
.adjust-item-stroke-color {
  margin-left: 14rpx;
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.adjust-item-operation {
  padding: 30rpx 20rpx;
  color: blue;
}

.bgimg{
  width: 100%;
  height: 500rpx;
  z-index: 0;
  position: absolute;
}


.content {
  background-color: rgba(255, 255, 255);
  padding: 30rpx;
  border-radius: 40rpx;
  position: absolute;
  top: 80%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  max-width: 600rpx;
  text-align: center;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.3);
}

.bg-image {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -1;
}