<!-- 使用画板 -->
<view class="container">
  <image class="bg-image" src="../../images/canvas/background.png"></image>
  <view class="drawing-board">
    <image class="bgimg" src="{{detailImg}}"></image>
    <drawing-board id="drawing-board" line-width="{{lineWidth}}" line-color="{{lineColor}}" bg-color="{{bgColor}}"
      bind:change="drawingBoardChange">
    </drawing-board>
  </view>

