<!-- 使用画板 -->
<view class="container">
<view class="drawing-board">
  <image class="bgimg" src="https://apis.map.qq.com/ws/staticmap/v2/?center=24.493656641843053,118.12510694185653&zoom=18&size=358*285&key=3P4BZ-5PICV-QCWPH-U6X4R-RKDJK-HQFM5"></image>
  <drawing-board
    id="drawing-board"
    line-width="{{lineWidth}}"
    line-color="{{lineColor}}"
    bg-color="{{bgColor}}"
    bind:change="drawingBoardChange"
  >
  </drawing-board>
</view>

