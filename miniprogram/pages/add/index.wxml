<wxs module="util" src="../util.wxs" />
<view class="container">
  <view class="form-group">
    <view class="form-cell">
      <view class="form-cell_title">位置</view>
      <input class="form-cell_input" placeholder="请输入位置（10字以内）" placeholder-class="form-cell_title-placeholder"
        bindinput="onTitleInput" value="{{title}}" />
    </view>
    <view class="form-cell">
      <view class="form-cell_title">上传原因</view>
      <input class="form-cell_input" placeholder="请输入上传原因（100字以内）" placeholder-class="form-cell_title-placeholder"
        bindinput="onDescInput" value="{{desc}}" />
    </view>
    <view class="form-cell">
      <view class="form-cell_title">面积</view>
      <input class="form-cell_input" placeholder="请输入面积" placeholder-class="form-cell_title-placeholder"
        bindinput="onDescInput" value="{{desc}}" />
    </view>
  </view>
  <view class="form-group">
    <view class="form-cell inline">
      <view>添加图片</view>
      <view class="upload-text" bindtap="addFile">
        {{(files.length === 0 ? "点击添加图片" : util.filterStr(fileName, 15))}}
      </view>
      <image class="upload" bindtap="addFile" src="../../images/add/next.png"></image>
    </view>
  </view>
  <view class="form-group">
    <view class="form-cell inline">
      <view>事件状态</view>
      <picker class="option" bindchange="onChooseFreq" range="{{freqOptions}}">
        {{freqOptions[freq]}}
      </picker>
      <picker class="selector" bindchange="onChooseFreq" range="{{freqOptions}}">
        <image class="selector" src="../../images/add/next.png" />
      </picker>
    </view>
  </view>
  <view class="footer">
    <view class="reset" bindtap="resetTodo">重置</view>
    <view class="save" bindtap="saveTodo">保存</view>
  </view>
</view>